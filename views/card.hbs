<h1>Корзина</h1>

<div id="card">
{{#if products.length}}
    <table>
        <thead>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td>{{ title }}</td>
                <td>{{ count }}</td>
                <td>
                    <button class="btn - btn-small js-remove" data-id="{{ id }}" data-csrf="{{ @root.csrf }}">Удалить</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <p><strong>Цена: <span class="price">{{ price }}</span></strong></p>

    <form action="/orders" method="POST">
        <input type="hidden" name="_csrf" value="{{ csrf }}">
        <button type="submit" class="btn btn-primaly">Сделать заказ</button>
    </form>
{{else}}
    <p>корзина пуста</p>
{{/if}}
</div>