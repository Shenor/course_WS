<h1>Редактировать товар!</h1>

<form action="/products/edit" method="POST" class="product-form">
    <div class="input-field">
          <input id="title" name="title" type="text" class="validate" required value="{{ product.title }}">
          <label for="title">Название товара</label>
          <span class="helper-text" data-error="Введите название"></span>
    </div>
     <div class="input-field">
          <input id="price" name="price" type="number" class="validate" required value="{{ product.price }}">
          <label for="price">Цена</label>
          <span class="helper-text" data-error="Введите цену"></span>
    </div>
    <div class="input-field">
          <input id="img" name="img" type="text" class="validate" required value="{{ product.img }}">
          <label for="img">URL картинки</label>
          <span class="helper-text" data-error="Введите URL"></span>
    </div>

      <input type="hidden" name="_csrf" value="{{ csrf }}">
      <input type="hidden" name="id" value="{{ product.id }}">

    <button type="submit" class="btn btn-primaly">Редактировать товар</button>
</form>

<form action="/products/remove" method="POST">
      <input type="hidden" name="_csrf" value="{{ csrf }}">
      <input type="hidden" name="id" value="{{ product.id }}">
      <button class="btn red">Удалить курс</button>
</form>
